<p id="notice"><%= notice %></p>

<h1>Posty</h1>
<table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post, class: 'btn btn-success'%></td>
          <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @posts, theme: 'twitter-bootstrap-3' %>
<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary btn-large' %>
